<div class="row">
  <p id="notice"><%= notice %></p>
    <div id="restaurante" class="col-md-8 order-md-1">
      <% if not @restaurants.blank? %>
      <% @restaurants.each do |restaurant| %>
        <h2><%= link_to restaurant.name, restaurant %></h2>
        <hr>
      <% end %>
      <% else %>
        <h2 class="text-center">Nenhum restaurante encontrado.</h2>
      <% end %>
    </div>
    <div class="col-md-4 order-md-2 mb-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Categories</h3>
        </div>
        <div class="panel-body">
          <ul>
            <% Category.all.each do |category| %>
              <li>
                <%= link_to category.name, homepage_restaurants_path(category_id: category.id) %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>

      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Search</h3>
        </div>
        <div class="panel-body">
          <%= form_tag('/restaurants/homepage', method: 'post') do %>
            <%= text_field_tag(:termo) %>
            <%= submit_tag('Buscar') %>
          <% end %>

        </div>
      </div>
    </div>
</div>
